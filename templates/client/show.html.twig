{% extends 'base.html.twig' %}

{% block title %}Client{% endblock %}

{% block body %}
    <h1>Client</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Identifiant</th>
                <td>{{ client.id }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ client.firstName }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ client.lastName }}</td>
            </tr>
            <tr>
                <th>Créé le</th>
                <td>{{ client.createdAt ? client.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_client_edit', {'id': client.id}) }}" class="btn btn-success">Modifier</a>
    {{ include('client/_delete_form.html.twig') }}
    <a href="{{ path('app_client_index') }}" class="btn btn-secondary">Retour à la liste des clients</a>


{% endblock %}
